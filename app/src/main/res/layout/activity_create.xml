<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_activity"
    tools:context=".CreateMealActivity" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_display_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_rv_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:id="@+id/fl_meal_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <ImageButton
                        android:id="@+id/button_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/ic_menu_camera"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/mealPic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                    <ImageView
                        android:id="@+id/search_foodid_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search_white_24dp"
                        android:visibility="invisible"
                        android:tint="@color/colorPrimaryDark"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:id="@+id/fl_add_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">
                        <LinearLayout
                            android:id="@+id/ll_create_search_holder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical">
                            <EditText
                                android:id="@+id/et_item_lookup_box"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textSize="24sp"
                                android:hint="Lookup..."
                                android:layout_weight="1"
                                android:singleLine="true" />
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="15dp">
                                <ImageButton
                                    android:id="@+id/button_add_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_done_24dp"
                                    android:background="@color/colorPrimary"
                                    />
                                <ProgressBar
                                    android:id="@+id/pb_add_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="invisible"
                                    />

                            </FrameLayout>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/fl_title_meal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_weight="1">
                                <EditText
                                    android:id="@+id/et_title_box"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="24sp"
                                    android:hint="Enter Title"
                                    android:singleLine="true"
                                    android:visibility="invisible"/>
                                <TextView
                                    android:id="@+id/tv_meal_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:textSize="24sp"
                                    android:text="@string/tv_meal_title" />
                            </FrameLayout>
                            <ImageButton
                                android:id="@+id/button_title_confirm"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_create_black_24dp"
                                android:visibility="invisible"
                                android:background="@color/colorPrimary"
                                android:layout_margin="15dp"
                                android:scaleType="fitCenter"/>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/nutrition_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/tv_create_calories"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="@string/display_create_calories"/>
                        <TextView
                            android:id="@+id/tv_total_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
android:layout_gravity="end"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_protein"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_protein"/>
                        <TextView
                            android:id="@+id/tv_total_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
android:layout_gravity="end"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_carbs"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_carbohydrates"/>
                        <TextView
                            android:id="@+id/tv_total_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_sugar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_sugar"/>
                        <TextView
                            android:id="@+id/tv_total_sugar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_fat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_fat"/>
                        <TextView
                            android:id="@+id/tv_total_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_tfat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_transfat"/>
                        <TextView
                            android:id="@+id/tv_total_tfat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_sfat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="@string/display_create_saturatefat"/>
                        <TextView
                            android:id="@+id/tv_total_sfat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_sodium"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_sodium"/>
                        <TextView
                            android:id="@+id/tv_total_sodium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_cholst"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_cholesterol"/>
                        <TextView
                            android:id="@+id/tv_total_cholst"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_calcium"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_calcium"/>
                        <TextView
                            android:id="@+id/tv_total_calcium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_create_iron"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="18sp"
android:text="@string/display_create_iron"/>
                        <TextView
                            android:id="@+id/tv_total_iron"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:paddingRight="4sp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_meal_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <ImageButton
            android:id="@+id/action_new_food"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_add_white_24dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="bottom|right"
            android:scaleType="fitCenter"/>
        <FrameLayout
            android:id="@+id/fl_choice_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSecondaryDark"
                android:alpha="0.75" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_creation_choices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="15dp" />
        </FrameLayout>
    </FrameLayout>


</LinearLayout>